<data>
    <xpath expr="/form/field[@name='company']" position="after">
        <group col="3" colspan="2" id="timetracker_buttons"
            string="Tracker">
            <button name="start_work_wizard" string="Start"/>
            <button name="stop_work" string="Stop"/>
            <button name="cancel_work" string="Cancel"/>
        </group>
    </xpath>

    <xpath expr="/form/notebook" position="inside">
        <page name="working_employees">
            <field name="working_employees" colspan="4"/>
        </page>
    </xpath>
</data>
